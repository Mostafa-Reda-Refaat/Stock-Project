@model IEnumerable<ItemViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>
<br />
<a asp-action="Add" class="btn btn-primary">Create New Item</a>
<br />
<br />


@if(Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Price)</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Item" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Items Found !!! </h3>
    </div>
}

